{
  "manifest_version": 2,
  "name": "Noel",
  "version": "0.1",

  "description": "WebExtension for nhentai.net",

  "permissions": [
    "*://nhentai.net/*",
    "*://*.nhentai.net/*",
    "contextMenus"
  ],

  "background": {
    "scripts": [
      "sizzle.js",
      "lib/fetch.js",
      "lib/garelly_url.js",
      "lib/page_url.js",
      "lib/extractor.js",
      "lib/garelly_extractor.js",
      "lib/page_extractor.js",
      "background/background.js"
    ]
  }
}
